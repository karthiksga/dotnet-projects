<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Services="clr-namespace:Jounce.Framework.Services;assembly=Jounce"
             x:Class="MaFamille.App"
             >
    <Application.Resources>
        
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Services/MainStyle.xaml"/>
    			<ResourceDictionary Source="/MaFamille.Common;component/Styles/MyPhotoStyle.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    	</ResourceDictionary>
        
    </Application.Resources>
    <Application.ApplicationLifetimeObjects>
        <Services:ApplicationService IgnoreUnhandledExceptions="False" LogSeverityLevel="Verbose"/>
    </Application.ApplicationLifetimeObjects>
</Application>
