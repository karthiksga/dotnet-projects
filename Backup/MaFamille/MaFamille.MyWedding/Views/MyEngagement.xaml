        <Button x:Name="btnFullScreen" Content="FullScreen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="49" Click="Button_Click" Style="{StaticResource FullScreenButtonTemplate}" Height="43" Canvas.ZIndex="1"/>
        <Image x:Name="imgFullScreen" RenderTransformOrigin="0.5,0.5" Stretch="Uniform" MouseLeftButtonDown="imgFullScreen_MouseLeftButtonDown">
            <Image.Resources>
            	<Storyboard x:Name="ZoomSlideShow">
            		<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="imgFullScreen">
            			<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            			<EasingDoubleKeyFrame KeyTime="0:0:2" Value="1.2"/>
            		</DoubleAnimationUsingKeyFrames>
            		<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="imgFullScreen">
            			<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            			<EasingDoubleKeyFrame KeyTime="0:0:2" Value="1.2"/>
            		</DoubleAnimationUsingKeyFrames>
            		<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="imgFullScreen">
            			<EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            			<EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            		</DoubleAnimationUsingKeyFrames>
            	</Storyboard>                
            	<Storyboard x:Name="FadeOutAnimation">
            		<DoubleAnimation Duration="00:00:00.50" From="1" To="0"
            			Storyboard.TargetProperty="Opacity"
            			Storyboard.TargetName="imgFullScreen" />
            		<DoubleAnimation Duration="00:00:00.60" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="imgFullScreen" d:IsOptimized="True"/>
            		<DoubleAnimation Duration="00:00:00.60" To="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="imgFullScreen" d:IsOptimized="True"/>
            	</Storyboard>                
            </Image.Resources>
        	<Image.RenderTransform>
        		<CompositeTransform/>
        	</Image.RenderTransform>
        </Image>
